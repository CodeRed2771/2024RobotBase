package frc.robot.subsystems.drive;

public class AutoShoot2L {

  DefaultRobot myRobot;
  private int drivenTicks = 0;

  public AutoShoot2L(DefaultRobot robot) {
    myRobot = this.robot;
  }
  public void start() {
		super.start();
	}  
  public void stop() {
    super.stop();
  }
  public void tick() {
    if (isRunning()) {
        SmartDashboard.putNumber("Auto Step", getCurrentStep());
        switch (getCurrentStep()) {
              case 0:
              myRobot.launcher.prime(0.3);
              // setTimerAndAdvanceStep(750);
              break;
            case 1:
              break;
            case 2:
              myRobot.launcher.fire();
              // setTimerAndAdvanceStep(250);
              break;
            case 3:
              break;
            case 4:
              myRobot.launcher.stop();
              myRobot.drive.driveSpeedControl(0.75,0,0,1);
              myRobot.launcher.load(0.45);
              // setTimerAndAdvanceStep(2500);
              break;
            case 5:
              drivenTicks++;
              if(myRobot.launcher.isLoaded)
                // advanceStep();
              break;
            case 6:
              myRobot.launcher.prime(0.3);
              myRobot.drive.driveSpeedControl(-0.75,0,0,1);
              // setTimerAndAdvanceStep(drivenTicks+150);
              break;
            case 7:
              break;
            case 8:
              myRobot.fire();
              break;
            case 9:
                myRobot.launcher.stop();
                stop();
                break;
        }
      }
}
